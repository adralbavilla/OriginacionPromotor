<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_detail" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/txtVisita"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="VISITA: GRUPO CRUZ PEREZ (ID 1231244)"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Martes 3 sep 10:00 AM"
                android:layout_below="@id/txtVisita"/>

            <TextView
                android:id="@+id/txtDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Sultepec 113"
                android:layout_below="@id/txtFecha"/>

            <TextView
                android:id="@+id/txtLlamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Llamar a prospecto (Paulina Cruz Perez)"
                android:layout_below="@id/txtDireccion"/>

            <TextView
                android:id="@+id/txtGestionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Gestionar oportunidad de venta"
                android:layout_below="@id/txtLlamar"/>

            <LinearLayout
                android:layout_width="226dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="150dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:background="@color/colorWhite"
                    android:text="RECHAZAR"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="400dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:background="@color/colorWhite"
                    android:text="ACEPTAR"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>
